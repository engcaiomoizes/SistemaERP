@page
@model SistemaERP.Views.Produto.FormModel
@{
}

<div class="container">
    <h1>Cadastro de Produto</h1>
    <form>
        <div class="form-group mb-3">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" />
        </div>
        <div class="form-group col-md-3 mb-3">
            <label for="categoriaId">Categoria:</label>
            <select class="form-control" id="categoriaId">
                <option>Selecione...</option>
            </select>
        </div>
        <div class="form-group col-md-3 mb-3">
            <label for="codigoBarras">Código de barras:</label>
            <input type="text" class="form-control" id="codigoBarras" maxlength="13" />
        </div>
        <div class="form-group col-md-2 mb-3">
            <label for="preco">Preço:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">R$</span>
                </div>
                <input type="text" class="form-control" id="preco" />
            </div>
        </div>
        <div class="form-group col-md-2 mb-3">
            <label for="embalagem">Embalagem:</label>
            <input type="text" class="form-control" id="embalagem" />
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" id="controlarEstoque" class="form-check-input" />
            <label class="form-check-label" for="controlarEstoque">Controlar estoque</label>
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>
