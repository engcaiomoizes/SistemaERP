@model IEnumerable<SistemaERP.Models.ProdutoViewModel>

@{
    System.Globalization.CultureInfo.CurrentCulture = new System.Globalization.CultureInfo("pt-BR");
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Lista de Produtos</h1>
    <a class="btn btn-primary" asp-action="Form">Cadastrar</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Cód. Barras</th>
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Qtde.</th>
                <th scope="col">Categoria</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <th scope="row">@item.CodigoBarras</th>
                    <td>@item.Nome</td>
                    <td>@item.Preco.ToString("C")</td>
                    <td>@item.Estoque.Quantidade</td>
                    <td>@item.Categoria.Nome</td>
                    <td>
                        <button class="btn btn-primary" type="button" data-bs-toggle="modal" onclick="Estoque(@item.Estoque.Id, @item.Estoque.Quantidade)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16">
                                <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" />
                            </svg>
                        </button>
                        <button class="btn btn-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" onclick="Confirm(@item.Id)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal" id="confirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Deseja realmente excluir este Produto?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-primary" id="btnConfirm">Sim</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="estoqueModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Controle de Estoque</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span><b>Estoque atual:</b> 20</span>
                    <div class="form-group my-3">
                        <label>Qtde.:</label>
                        <input type="number" class="form-control" name="Quantidade" id="qtde" min="0" max="9999" />
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <button type="button" class="btn btn-success" onclick="Acrescentar">Acrescentar</button>
                        <button type="button" class="btn btn-danger" onclick="Remover">Remover</button>
                        <button type="button" class="btn btn-primary" onclick="Definir">Definir</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let prodId = 0;
        let estoqueId = 0;
        let qtdeAtual = 0;

        $(document).ready(function() {
            $("#btnConfirm").click(function() {
                // var id = $("#id").val();
                $.ajax({
                    type: "POST",
                    url: "/Produto/Delete",
                    data: { id: prodId },
                    success: function(result) {
                        if (result) {
                            if (result.success) window.location.href = "/Produto";
                            else alert(result.message);
                        } else {
                            alert("Ops! Algo deu errado!");
                        }
                    }
                })
            })
        })

        var Confirm = function(id) {
            // $("#id").val(id);
            prodId = id;
            $("#confirmModal").modal('show');
        }

        var Estoque = function(id, qtde) {
